{

  "manifest_version": 2,
  "name": "Opz.io Chrome",
  "version": "1.1.12",
  "short_name": "Opzio browser time tracker",
  "description": "Seamless Project Management",

  "browser_action": {
    "browser_style": false,
    "default_icon": {
      "19": "img/icon_main.png",
      "38": "img/icon_main.png"
    },
    "default_title": "Opzio",
    "default_popup": "panel/panel.html"
  },

  "options_ui": {
    "page": "options/options.html",
    "chrome_style": false
  },

  "icons": {
    "48": "img/icon_main.png",
    "96": "img/icon_main.png"
  },

  "background": {
    "persistent": true,
    "scripts": ["config.js", "./scripts/jquery.min.js", "./scripts/oauth.js", "./scripts/opz.js","main.js"]
  },

  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["*://mail.google.com/*"],
      "js": ["./scripts/gmail/jquery.min.js", "./scripts/gmail/gmail_inject.js"]
    },
    {
        "matches": ["https://hangouts.google.com/webchat/*"],
        "run_at": "document_end",
        "all_frames": true,   
        "js": ["./scripts/gmail/hangouts.js"]
    }
  ],


  "web_accessible_resources": [
    "main.js",
    "scripts/gmail/gmail_api.js",
    "scripts/gmail/gmail_main.js",
    "scripts/gmail/gmail_inject.js",
    "scripts/gmail/jquery.min.js",
    "scripts/gmail/hangouts.js",
    "scripts/test.js"
  ],

  "permissions":[
    "activeTab",
    "alarms",
    "bookmarks",
    "contextMenus",
    "cookies",
    "idle",
    "notifications",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "https://api.opz.io/*", 
    "https://opz.io/*",
    "http://*/*",
    "*://mail.google.com/*",
    "https://mail.google.com/*",
    "*://hangouts.google.com/*",
    "https://hangouts.google.com/*",
    "*://*.google.com/*",
    "https://mail.google.com/",
    "https://hangouts.google.com/",
    "<all_urls>"
  ]

}